# Example environment configuration. Copy to .env and fill values.
# Server
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=changeme-super-secret

# Database (Supabase / Postgres)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/postgres?schema=public

# Auth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# AI Keys
GOOGLE_GENERATIVE_AI_API_KEY=your-gemini-api-key

# Vapi Web SDK
NEXT_PUBLIC_VAPI_TOKEN=your-vapi-web-token

# Email (Nodemailer)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=Your App <your-email@example.com>

# App
NEXT_PUBLIC_BASE_URL=http://localhost:3000
